<% if flash[:alert] %>
	<p><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
	<p>Registration</p>
	<div>
		<%= label_tag :name, 'Name:' %>
		<%= text_field_tag :name, params[:name] %>
	</div>

	<div>
		<%= label_tag :password, 'Password:' %>
		<%= password_field_tag :password, params[:password] %>
	</div>

	<div>
		<%= submit_tag "Login"%>
	</div>
<% end %>